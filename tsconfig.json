{
  "compilerOptions": {
    "target": "ES2020", // Ou outra vers√£o do ECMAScript
    "module": "NodeNext", // <--- ALINHE ISSO COM moduleResolution
    "moduleResolution": "nodenext", // <---
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"]
